CREATE TABLE IF NOT EXISTS "__EFMigrationsHistory" (
    "MigrationId" TEXT NOT NULL CONSTRAINT "PK___EFMigrationsHistory" PRIMARY KEY,
    "ProductVersion" TEXT NOT NULL
);

CREATE TABLE "SensorEvent" (
    "Id" INTEGER NOT NULL CONSTRAINT "PK_SensorEvent" PRIMARY KEY AUTOINCREMENT,
    "Timestamp" TEXT NOT NULL,
    "Valor" TEXT NULL,
    "Status" TEXT NOT NULL
);

CREATE TABLE "Tag" (
    "Id" INTEGER NOT NULL CONSTRAINT "PK_Tag" PRIMARY KEY AUTOINCREMENT,
    "Country" TEXT NOT NULL,
    "Region" TEXT NOT NULL,
    "SensorName" TEXT NOT NULL,
    "SensorEventId" INTEGER NOT NULL,
    CONSTRAINT "FK_Tag_SensorEvent_SensorEventId" FOREIGN KEY ("SensorEventId") REFERENCES "SensorEvent" ("Id") ON DELETE CASCADE
);

CREATE UNIQUE INDEX "IX_Tag_SensorEventId" ON "Tag" ("SensorEventId");

INSERT INTO "__EFMigrationsHistory" ("MigrationId", "ProductVersion")
VALUES ('20200906140230_InitialMigration', '3.1.7');

